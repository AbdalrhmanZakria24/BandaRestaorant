@model List<Menu>
@{
    ViewData["Title"] = "Menu List";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Menu Items</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 rounded-3 h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@item.Name</h5>
                        <p class="card-text mb-1">
                            <strong>Price:</strong> $@item.Price
                        </p>
                        <p class="card-text mb-3">
                            <strong>Category:</strong> @item.Catogre
                        </p>

                        <!-- الأزرار -->
                        <div class="mt-auto d-flex justify-content-between gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm w-100">
                                Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm w-100">
                                Edit
                            </a>
                            <form asp-action="Delete" method="post" class="w-100">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                        onclick="return confirm('Are you sure you want to delete this menu item?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success btn-lg rounded-pill px-4">
            ➕ Add New Item
        </a>
    </div>
</div>
