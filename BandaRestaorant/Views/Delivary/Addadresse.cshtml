@model List<int>
@{
    ViewData["Title"] = "Add Delivery Address";
}

<div class="container mt-4">
    <h2 class="mb-4">Delivery Details</h2>

    <form asp-controller="Delivary" asp-action="ConfirmDelivery" method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <input type="hidden" name="selectedMenuIds" value="@Model[i]" />
        }

 
        <input type="hidden" name="customerId" value="@ViewBag.CustomerId" />

        <div class="mb-3">
            <label for="Address" class="form-label">Delivery Address</label>
            <input type="text" class="form-control" id="Address" name="address" required />
        </div>

        <button type="submit" class="btn btn-success">Confirm Delivery</button>
        <a asp-controller="Delivary" asp-action="Print" class="btn btn-secondary">Cancel</a>
    </form>
</div>
