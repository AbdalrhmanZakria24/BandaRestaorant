@model Delivery
@{
    ViewData["Title"] = "Thank You";
}

<div class="container mt-5 text-center">
    <div class="alert alert-success p-5 shadow-lg">
        <h2 class="mb-4">Thank You!</h2>
        <p class="fs-4">@TempData["Message"]</p>

        <h4 class="mt-3">Total Price: @Model.TotalPrice</h4>
        <h4 class="mt-2">Delivery Address: @Model.Address</h4>

        <a asp-controller="Delivary" asp-action="Print" class="btn btn-primary mt-3">
            Back to Menu
        </a>
    </div>
</div>
