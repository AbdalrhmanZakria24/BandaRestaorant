@model Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Delete Customer</h4>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-3">Are you sure you want to delete this customer?</h5>

                    <dl class="row">
                        <dt class="col-sm-4 text-end fw-bold">Name:</dt>
                        <dd class="col-sm-8 text-start">@Model.Name</dd>

                        <dt class="col-sm-4 text-end fw-bold">Phone:</dt>
                        <dd class="col-sm-8 text-start">@Model.PhoneNumber</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="GetAll" class="btn btn-outline-secondary w-50 me-2">Cancel</a>
                            <button type="submit" class="btn btn-danger w-50">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
